@model MVCCrud.Models.Employee


<form id="employeeform">
    <div class="form-group">
        <label for="id"> @Html.DisplayNameFor(Model => Model.Id)</label>
        <input type="text" class="form-control" id="id" aria-describedby="emailHelp" value=@Html.DisplayFor(Model => Model.Id) disabled>
    </div>
    <div class="form-group">
        <label for="name"> @Html.DisplayNameFor(Model => Model.Name)</label>
        <input type="text" class="form-control" id="name" aria-describedby="emailHelp" value=@Html.DisplayFor(Model => Model.Name)>
    </div>
    <div class="form-group">
        <label for="designation"> @Html.DisplayNameFor(Model => Model.Desgination)</label>
        <input type="text" class="form-control" id="designation" aria-describedby="emailHelp" value=@Html.DisplayFor(Model => Model.Desgination)>
    </div>
    <div class="form-group">
        <label for="salary"> @Html.DisplayNameFor(Model => Model.Salary)</label>
        <input text="text" class="form-control" id="salary" aria-describedby="emailHelp" value=@Html.DisplayFor(Model => Model.Salary)>
    </div>
</form>


